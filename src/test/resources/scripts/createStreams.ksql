CREATE STREAM aKsqlTest (id string key,foo VARCHAR) WITH (kafka_topic='private.euw.kapoeira-dsl-it.stringvalue.tracking.raw', value_format='json', partitions=5, key_format='kafka');
CREATE STREAM aKsqlAvroTest (id string key,aString VARCHAR,anInt int,anOptionalString VARCHAR) WITH (kafka_topic='private.euw.kapoeira-dsl-it.avrovalue.tracking.raw', value_format='avro', partitions=5, value_avro_schema_full_name='com.lectra.kapoeira.Avrovaluev1', key_format='kafka' );
create stream mergeKsqlTest with (kafka_topic='private.euw.kapoeira-dsl-it.mergedstringvalue.tracking.raw', value_format='json', partitions=5) as select a.id, a.foo as foo, b.anInt as anInt from aKsqlTest a inner join aKsqlAvroTest b within 2 hours on a.id = b.id;

